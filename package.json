{
	"name": "couchdb-vs",
	"displayName": "CouchDB VS",
	"version": "0.0.1",
	"description": "Datamanagement for CouchDB.",
	"author": {
		"name": "Artur Biko",
		"email": "your.email@example.com"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [],
	"contributes": {
		"configuration": {
			"title": "CouchDB Connection",
			"properties": {
				"couchdb-vs.host": {
					"type": "string",
					"description": "The URL of the host",
					"default": "",
					"scope": "workspace"
				},
				"couchdb-vs.username": {
					"type": "string",
					"description": "The username to use",
					"default": "",
					"scope": "workspace"
				},
				"couchdb-vs.password": {
					"type": "string",
					"description": "The password to use",
					"default": "",
					"scope": "workspace"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "./assets/icon.svg",
					"id": "couchDataView",
					"title": "CouchDB"
				}
			]
		},
		"views": {
			"couchDataView": [
				{
					"id": "couchdb-vs.couchDataView",
					"name": "Databases"
				},
				{
					"id": "couchdb-vs.couchDocumentList",
					"name": "Documents"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "couchdb-vs.refreshDatabases",
					"when": "view == couchdb-vs.couchDataView",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "helloworld.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "couchdb-vs.refreshDatabases",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "couchdb-vs.selectDatabase",
				"title": "Select"
			},
			{
				"command": "couchdb-vs.openSettings",
				"title": "Settings"
			},
			{
				"command": "couchdb-vs.openDocument",
				"title": "Open Document"
			}
		],
		"viewsWelcome": [
			{
				"view": "couchdb-vs.couchDataView",
				"contents": "Please configure the connection settings and try to refresh the data. \n[Settings](command:couchdb-vs.openSettings)"
			},
			{
				"view": "couchdb-vs.couchDocumentList",
				"contents": "No databases selected to display any documents. Well played."
			}
		]
	},
	"dependencies": {
		"nano": "10.1.2"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^5.0.2"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"license": "MIT"
}
